{
  "name": "RexChain",
  "description": "Made Cryptography to General Purpose",
  "scripts": {
    "postdeploy": "bin/post_compile"
  },
  "env": {
    "HEROKU_APP_NAME": {
      "required": true
    },
    "HEROKU_PARENT_APP_NAME": {
      "required": true
    },
    "AUTO_MIGRATE": {
      "required": true
    },
    "SECRET_KEY": {
      "required": true
    },
    "DEBUG_STATE": {
      "required": true
    },
    "PRODUCTION": {
      "required": true
    },
    "BLOCK_SIZE": {
      "required": true
    },
    "SECURE_SSL_REDIRECT": {
      "required": true
    },
    "BLOCKCYPHER_API_TOKEN": {
      "required": true
    },
    "CHAIN": {
      "required": true
    },
    "BASE_POE_URL": {
      "required": true
    },
    "ALLOWED_HOSTS": {
      "required": true
    },
    "LOAD_FIXTURES": "True",
    "HC_BITS_DIFFICULTY": {
      "required": true
    },
    "HC_RANDOM_STRING_SIZE": {
      "required": true
    },
   "WALLET_URL": {
      "required": true
    },
    "HC_WORD_INITIAL": {
      "required": true
    },
    "STAMPD_ID": {
      "required": true
    },
    "STAMPD_KEY": {
      "required": true
    },
    "WHITEPAPER_URL": {
      "required": true
    },
    "JIRA_URL": {
      "required": true
    },
    "JIRA_USER": {
      "required": true
    },
    "JIRA_PASSWORD": {
      "required": true
    },
    "REACHCORE_ENTITY": {
      "required": true
    },
    "REACHCORE_USER": {
      "required": true
    },
    "REACHCORE_PASS": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    },
    "worker": {
      "quantity": 1,
      "size": "free"
    }
  },
  "addons": [
    "papertrail",
    "heroku-postgresql",
    "heroku-redis"
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}
